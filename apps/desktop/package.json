{
  "name": "desktop",
  "version": "0.1.0",
  "private": true,
  "main": "main.cjs",
  "scripts": {
    "dev": "pnpm prepare:server && concurrently -k \"pnpm -C ../h5 dev --host 127.0.0.1 --port 5181 --strictPort\" \"pnpm dev:app\"",
    "dev:app": "wait-on tcp:5181 && cross-env ELECTRON_RENDERER_URL=http://127.0.0.1:5181 node scripts/start-electron.cjs",
    "dev:app:debug": "wait-on tcp:5181 && cross-env ELECTRON_RENDERER_URL=http://127.0.0.1:5181 ELECTRON_OPEN_DEVTOOLS=1 node scripts/start-electron.cjs",
    "build:renderer": "pnpm -C ../h5 build:desktop",
    "prepare:renderer": "node scripts/sync-renderer.mjs",
    "prepare:server": "node scripts/prepare-local-server.mjs",
    "build:win": "pnpm build:renderer && pnpm prepare:renderer && pnpm prepare:server && electron-builder --win nsis --x64",
    "build:mac": "pnpm build:renderer && pnpm prepare:renderer && pnpm prepare:server && electron-builder --mac dmg"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "31.7.7",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.holdemlite.desktop",
    "productName": "Holdem Lite",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "main.cjs",
      "preload.cjs",
      "renderer-dist/**/*"
    ],
    "extraResources": [
      {
        "from": "local-server-dist",
        "to": "local-server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false
    },
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "dmg"
      ]
    }
  }
}
