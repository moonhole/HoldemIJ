{$APP_DOMAIN::80} {
    route {
        encode zstd gzip

        @api path /api /api/*
        @ws path /ws /ws/*
        @health path /health
        reverse_proxy @api app:18080
        reverse_proxy @ws app:18080
        reverse_proxy @health app:18080

        root * /srv
        try_files {path} /index.html
        file_server
    }
}
